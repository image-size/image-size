{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist/esm",
    "declarationDir": "dist/dts",
    "rootDir": "./lib",
    "allowJs": false,
    "declaration": true,
    "removeComments": false,
    "strict": true,
    "alwaysStrict": true,
    "lib": ["ES2021", "DOM"],
    "skipLibCheck": true
  },
  "include": ["lib/**/*"],
  "typedocOptions": {
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "entryPoints": ["lib/index.ts"],
    "out": "docs"
  }
}
