{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "outDir": "dist/esm",
    "declarationDir": "dist/dts",
    "rootDir": "./lib",
    "allowJs": false,
    "declaration": true,
    "removeComments": false,
    "strict": true,
    "alwaysStrict": true
  },
  "include": ["lib/**/*"],
  "typedocOptions": {
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "entryPoints": ["lib/index.ts"],
    "out": "docs"
  }
}
