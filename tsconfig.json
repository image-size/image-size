{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "removeComments": false,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM"],
  },
  "include": [
    "lib/**/*"
  ],
  "typedocOptions": {
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "entryPoints": ["lib/index.ts"],
    "out": "docs"
  }
}
